	<Style x:Key="ApplicationButtonStyleOffice2010" TargetType="telerikRibbonView:RadRibbonDropDownButton">
		<Setter Property="Padding" Value="0" />
		<Setter Property="BorderThickness" Value="1" />
		<Setter Property="HorizontalContentAlignment" Value="Center" />
		<Setter Property="VerticalContentAlignment" Value="Center" />
		<Setter Property="Background" Value="Transparent" />
		<Setter Property="Margin" Value="2,0,0,0" />
        <Setter Property="Foreground" Value="{StaticResource MainBrush}" />
		<Setter Property="IsTabStop" Value="False" />
		<Setter Property="DropDownIndicatorVisibility" Value="Collapsed" />
		<Setter Property="IsAutoSize" Value="False" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="telerikRibbonView:RadRibbonDropDownButton">
					<Grid Width="46" Height="22" Background="Transparent">
						
                       
						<Grid x:Name="ContentGrid" Margin="{TemplateBinding Padding}">
							<Grid.RowDefinitions>
								<RowDefinition Height="Auto" />
								<RowDefinition Height="*" />
							</Grid.RowDefinitions>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="Auto" />
								<ColumnDefinition Width="*" />
								<ColumnDefinition Width="Auto" />
							</Grid.ColumnDefinitions>

							<ContentPresenter Grid.ColumnSpan="3" Grid.RowSpan="2" Content="{TemplateBinding Content}"
									HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
									VerticalAlignment="{TemplateBinding VerticalContentAlignment}"
									ContentTemplate="{TemplateBinding ContentTemplate}" />

							<Image x:Name="Image" Stretch="None" Grid.ColumnSpan="3" Grid.RowSpan="2"
									HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
									VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />

							<TextBlock x:Name="textRow1" Grid.Row="1" Margin="0,2,0,0" Text="{TemplateBinding TextRow1}"
									TextAlignment="Center" />

							<StackPanel x:Name="DropDownPanel" Grid.Row="1" Margin="0,14,0,0"
									HorizontalAlignment="Center" Orientation="Horizontal" MinHeight="14" MaxHeight="14"
									Height="14">
								<TextBlock x:Name="textRow2" Text="{TemplateBinding TextRow2}" />
							</StackPanel>

                            <Path x:Name="DropDownIndicator"
								 Grid.Row="2" Grid.Column="1"
								 IsHitTestVisible="False"
								 Visibility="{TemplateBinding DropDownIndicatorVisibility}"
								 Fill="{TemplateBinding Foreground}"
								 HorizontalAlignment="Center"
								 VerticalAlignment="Center"
								 RenderTransformOrigin="0.5,0.5"
								 Margin="5,3,5,3"
								 Data="M0,0 L5,0 5,1 4,1 4,2 3,2 3,3 2,3 2,2 1,2 1,1 0,1 0,0 z"
								 SnapsToDevicePixels="True"
                                 />
                        </Grid>

						
						<Popup x:Name="DropDownPopup" HorizontalOffset="0" VerticalOffset="-22"
								AllowsTransparency="True" StaysOpen="False" Focusable="false" Placement="Bottom"
								IsOpen="{Binding Path=IsOpen, RelativeSource={RelativeSource TemplatedParent}}">
							
							
								<!--PopupAnimation="{DynamicResource {x:Static SystemParameters.ComboBoxPopupAnimationKey}}">-->
								<Border x:Name="DropDownPopupBorder" BorderBrush="Transparent" Background="Transparent"
										BorderThickness="0" Padding="0" MinWidth="33" MinHeight="33">
									<ContentControl x:Name="DropDownPopupContent"
											Content="{TemplateBinding DropDownContent}" HorizontalAlignment="Stretch"
											VerticalAlignment="Stretch" />
								</Border>
								
						</Popup>
						
						

						<Rectangle x:Name="DisabledIndicator" Visibility="Collapsed" Fill="#99FFFFFF" />
					</Grid>
					
					<ControlTemplate.Triggers>
						<Trigger Property="IsMouseOver" Value="true">
                            <Setter TargetName="ContentGrid" Property="Opacity" Value="1" />
                        </Trigger>
						<Trigger Property="IsPressed" Value="True">
                            <Setter TargetName="ContentGrid" Property="Opacity" Value="1" />
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False" />

                        <Trigger Property="IsOpen" Value="True">
                            <Setter TargetName="ContentGrid" Property="Opacity" Value="1" />
                        </Trigger>
						<Trigger Property="DropDownButtonPosition" Value="Top" />
						<Trigger Property="DropDownButtonPosition" Value="Left" />
						<Trigger Property="DropDownButtonPosition" Value="Bottom" />
						<Trigger Property="DropDownButtonPosition" Value="Right">
							<Setter TargetName="DropDownPanel" Property="Grid.Column" Value="2" />
							<Setter TargetName="DropDownPanel" Property="Grid.Row" Value="0" />
							<Setter TargetName="DropDownPanel" Property="Margin" Value="0,0,0,0" />
							<Setter TargetName="textRow2" Property="Visibility" Value="Collapsed" />
						</Trigger>
						<Trigger Property="CurrentSize" Value="Large" />
						<Trigger Property="CurrentSize" Value="Medium">
							<Setter TargetName="textRow1" Property="Grid.Row" Value="0" />
							<Setter TargetName="textRow1" Property="Grid.Column" Value="0" />
							<Setter TargetName="textRow1" Property="Margin" Value="4,0,1,0" />
							<Setter TargetName="textRow1" Property="VerticalAlignment" Value="Center" />
							<Setter TargetName="textRow1" Property="TextAlignment" Value="Left" />
							<Setter TargetName="textRow2" Property="Visibility" Value="Collapsed" />
						</Trigger>
						<Trigger Property="CurrentSize" Value="Small">
							<Setter TargetName="textRow1" Property="Visibility" Value="Collapsed" />
							<Setter TargetName="textRow2" Property="Visibility" Value="Collapsed" />
						</Trigger>
						<Trigger Property="DropDownPlacement" Value="Absolute" />
						<Trigger Property="DropDownPlacement" Value="Bottom" />
						<Trigger Property="DropDownPlacement" Value="Center" />
						<Trigger Property="DropDownPlacement" Value="Top" />

						<Trigger Property="DropDownPlacement" Value="Left" />

						<Trigger Property="DropDownPlacement" Value="Right" />

					</ControlTemplate.Triggers>
					
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>
    <Style TargetType="telerikRibbonView:RadRibbonTab" x:Key="ContextualTabsStyle">
        <Setter Property="Padding" Value="0,1,0,1" />
        <Setter Property="Margin" Value="2 2 2 0" />
        <Setter Property="Background" Value="Pink" />
        <Setter Property="BorderThickness"  Value="1,0,0,0" />
        <Setter Property="IsTabStop" Value="False" />
        <Setter Property="BorderBrush" Value="{StaticResource MainBrush}" />
        <Setter Property="Foreground" Value="{StaticResource MainBrush}" />
        
        <Setter Property="FocusVisualStyle">
            <Setter.Value>
                <Style TargetType="Control">
                    <Setter Property="Visibility"
                            Value="Collapsed" />
                </Style>
            </Setter.Value>
        </Setter>
        
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="telerikRibbonView:RadRibbonTab">
                    <Grid x:Name="RootPanel">
                        
                        <Rectangle x:Name="TabSeparator"
                                   Margin="0,0,-3,0"
                                   HorizontalAlignment="Right"
                                   Fill="{TemplateBinding BorderBrush}"
                                   VerticalAlignment="Stretch"
                                   Width="1"
                                   Visibility="Collapsed" />
                        <Grid x:Name="HeaderPanel" Visibility="{Binding RelativeSource={RelativeSource TemplatedParent}, Path=HeaderVisibility, Mode=TwoWay}">
                            <Border x:Name="MouseOverVisual" BorderBrush="#848484" Visibility="Collapsed"
                                    BorderThickness="1 1 1 0" >
                                <Border Opacity="0.6" Background="{TemplateBinding Background}">
                                    <Border.OpacityMask>
                                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                            <GradientStop Color="#00FFFFFF" Offset="0" />
                                            <GradientStop Color="#ffFFFFFF" Offset="1" />
                                            <GradientStop Color="#19FFFFFF" Offset="0.527" />
                                        </LinearGradientBrush>
                                    </Border.OpacityMask>
                                </Border>
                            </Border>
                            <Border x:Name="SelectedVisual" BorderBrush="#848484" Visibility="Collapsed"
                                    BorderThickness="1 1 1 0" Background="#FFFFFFFF">
                                <Border x:Name="InnerBackground" Background="{TemplateBinding Background}">
                                    <Border.OpacityMask>
                                        <LinearGradientBrush StartPoint="0.5,0" EndPoint="0.5,1">
                                            <GradientStop Color="#19FFFFFF" Offset="0" />
                                            <GradientStop Color="#59FFFFFF" Offset="0.173" />
                                            <GradientStop Color="#7FFFFFFF" Offset="0.191" />
                                            <GradientStop Color="Transparent" Offset="0.866" />
                                        </LinearGradientBrush>
                                    </Border.OpacityMask>
                                </Border>
                            </Border>
                            
                            <telerikNavigationPrimitives:TabItemContentPresenter Grid.Column="1" IsTabStop="False"
                                    x:Name="HeaderElement" Content="{TemplateBinding Header}" Foreground="{Binding RelativeSource={RelativeSource TemplatedParent},
                                Path=Foreground, Mode=TwoWay}" ContentTemplate="{TemplateBinding HeaderTemplate}"
                                    VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                    HorizontalAlignment="Center"  HorizontalContentAlignment="Center"
                                    VerticalAlignment="Center" Margin="5,0" />
                        </Grid>

                        <Grid x:Name="ContentPanel" Width="0">
                            <Border Name="OuterBorder" BorderThickness="1" 
                                    BorderBrush="{StaticResource BasicBrush}"
									Background="{StaticResource MainBrush}">
                                <telerikRibbonViewPrimitives:RibbonScrollViewer
											telerik:StyleManager.Theme="{StaticResource Theme}">
                                    <ItemsPresenter HorizontalAlignment="Left" />
                                </telerikRibbonViewPrimitives:RibbonScrollViewer>
                            </Border>
                        </Grid>
                    </Grid>
                    
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="MouseOverVisual" Property="Visibility" Value="Visible" />
                        </Trigger>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="SelectedVisual"
                                    Property="Visibility"
                                    Value="Visible" />
                            <Setter Property="Foreground" TargetName="HeaderElement" Value="{StaticResource StrongBrush}" />
                        </Trigger>
                        <Trigger Property="IsEnabled"
                                 Value="False">
                            <Setter Property="Opacity"
                                    Value="0.5"
                                    TargetName="HeaderElement" />
                            <Setter TargetName="SelectedVisual"
                                    Property="Visibility"
                                    Value="Collapsed" />
                            <Setter TargetName="MouseOverVisual"
                                    Property="Opacity"
                                    Value="0" />
                        </Trigger>
                        <Trigger Property="IsContextualTabVisible"
                                 Value="False">
                            <Setter Property="Visibility"
                                    TargetName="HeaderPanel"
                                    Value="Collapsed" />
                        </Trigger>
                        
                        <MultiTrigger>
                            <MultiTrigger.Conditions>
                                <Condition Property="IsMouseOver"
                                           Value="True" />
                                <Condition Property="IsSelected"
                                           Value="True" />
                            </MultiTrigger.Conditions>
                            <Setter TargetName="InnerBackground"
                                    Property="Background"
                                    Value="#fbe0a1" />
                        </MultiTrigger>
                    </ControlTemplate.Triggers>
                    
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
