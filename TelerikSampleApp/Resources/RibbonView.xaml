								<RowDefinition Height="Auto" />
								<RowDefinition Height="Auto" />
							</Grid.RowDefinitions>
                            <Border x:Name="GroupImage" BorderBrush="{StaticResource BasicBrush}" BorderThickness="1"  Width="31" Height="31" Background="{StaticResource MainBrush}" Margin="3">
								<Grid>
									<Image VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0,0,0,7" Source="{TemplateBinding Icon}" Width="16" Height="16" />
								</Grid>
							</Border>
