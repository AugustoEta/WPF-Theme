	<Style TargetType="telerikRibbonView:QuickAccessToolBar">
		<Setter Property="IsTabStop" Value="False" />
        <Setter Property="Background" Value="{StaticResource BasicBrush}" />
        <Setter Property="BorderBrush" Value="{StaticResource BasicBrush}" />
        <Setter Property="HorizontalAlignment" Value="Stretch" />
        <Setter Property="Margin" Value="0" />
		<Setter Property="CustomizationMenuVisibility" Value="Visible" />
		<Setter Property="Template">
			<Setter.Value>
				<ControlTemplate TargetType="telerikRibbonView:QuickAccessToolBar">
					<Grid MinHeight="22" x:Name="RootElement">
						
						<Grid x:Name="BelowBackgroundGrid" Visibility="Collapsed">
							<Border Background="{TemplateBinding Background}" />
						</Grid>

						<Grid>
							<Grid.ColumnDefinitions>
								<ColumnDefinition Width="Auto" />
								<ColumnDefinition Width="13" />
							</Grid.ColumnDefinitions>

							<Grid x:Name="AboveBackgroundGridWrapper">
								<Grid x:Name="AboveBackgroundGrid" Height="22" />
							</Grid>

							<Grid HorizontalAlignment="Left" x:Name="PART_StripPanelGrid" Grid.Column="0"
									Margin="3 0 0 0">
								<StackPanel x:Name="PART_StripPanel" Orientation="Horizontal" HorizontalAlignment="Left" />
							</Grid>

							<Popup Grid.Column="1" x:Name="PART_Overflow">
								<Border Margin="0" MinWidth="55" MinHeight="33">
                                    <Border BorderThickness="1" Padding="1,2,1,2" Background="{StaticResource MainBrush}" BorderBrush="{StaticResource BasicBrush}">
										<StackPanel x:Name="PART_OverflowPanel" Orientation="Vertical"
												VerticalAlignment="Top" />
									</Border>
								</Border>
							</Popup>

							<telerikRibbonView:RadRibbonDropDownButton
									Visibility="{TemplateBinding CustomizationMenuVisibility}"
									DropDownIndicatorVisibility="Collapsed" Width="13" Height="22"
									HorizontalAlignment="Left" Grid.Column="1" VerticalAlignment="Top" Padding="0,2,0,2">
								<telerikRibbonView:RadRibbonDropDownButton.DropDownContent>
									<StackPanel>
										<telerikRibbonView:RadGroupHeader Content="Customize Quick Access Toolbar"
												telerik:LocalizationManager.ResourceKey="RibbonViewQATCustomize" />
										<telerikNavigation:RadContextMenu BorderThickness="0">
											<telerikNavigation:RadMenuItem x:Name="TogglePositionMenuItem"
													Header="Show Below the Ribbon."
													telerik:LocalizationManager.ResourceKey="RibbonViewQATShowBelow" />
											<telerikNavigation:RadMenuItem IsSeparator="True" Padding="0" Margin="0" />
											<telerikNavigation:RadMenuItem x:Name="ToggleMinimizeMenuItem"
													Header="Minimize the Ribbon."
													telerik:LocalizationManager.ResourceKey="RibbonViewQATMinimize" />
										</telerikNavigation:RadContextMenu>
									</StackPanel>
								</telerikRibbonView:RadRibbonDropDownButton.DropDownContent>
								<Path x:Name="MainPopupButtonPath" HorizontalAlignment="Center"
										VerticalAlignment="Center" Margin="4,7,2,0"
										Data="M 0,-2.5 L 0,-1.5 L 7,-1.5 L 7,-2.5 M 0,0 L 3.5,3.5 L 7,0"
										Fill="{StaticResource MainBrush}"
										Stroke="{StaticResource MainBrush}" />
							</telerikRibbonView:RadRibbonDropDownButton>
						</Grid>
					</Grid>
					
					<ControlTemplate.Triggers>
						<Trigger Property="Position" Value="BelowRibbon">
							<Setter Property="Visibility" Value="Collapsed" TargetName="AboveBackgroundGrid" />
							<Setter Property="Visibility" Value="Visible" TargetName="BelowBackgroundGrid" />
							<Setter Property="Margin" Value="2,2,0,2" TargetName="PART_StripPanelGrid" />
							<Trigger.EnterActions>
								<BeginStoryboard>
									<Storyboard>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="TogglePositionMenuItem"
												Storyboard.TargetProperty="Header">
											<DiscreteObjectKeyFrame KeyTime="0"
													telerik:LocalizationManager.ResourceKey="RibbonViewQATShowAbove" />
										</ObjectAnimationUsingKeyFrames>
									</Storyboard>
								</BeginStoryboard>
							</Trigger.EnterActions>
							<Trigger.ExitActions>
								<BeginStoryboard>
									<Storyboard>
										<ObjectAnimationUsingKeyFrames Storyboard.TargetName="TogglePositionMenuItem"
												Storyboard.TargetProperty="Header">
											<DiscreteObjectKeyFrame KeyTime="0"
													telerik:LocalizationManager.ResourceKey="RibbonViewQATShowBelow" />
										</ObjectAnimationUsingKeyFrames>
									</Storyboard>
								</BeginStoryboard>
							</Trigger.ExitActions>
						</Trigger>
					</ControlTemplate.Triggers>
					
				</ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

