                    <!--Content-->
                    <Grid x:Name="ContentBorder" Grid.Column="1" Grid.Row="1" Background="{StaticResource MainBrush}" Margin="{TemplateBinding Padding}">
                   
                        <!-- content -->
                        <ContentPresenter x:Name="ContentElement" ContentTemplate="{TemplateBinding SelectedContentTemplate}"
					        ContentTemplateSelector="{TemplateBinding SelectedContentTemplateSelector}"
                             />
                    </Grid>
                </Grid>
            </ScrollViewer>
        </Border>
    </ControlTemplate>
        
