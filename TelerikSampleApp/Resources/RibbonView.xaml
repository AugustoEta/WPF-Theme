                            <Path x:Name="Path" Grid.Row="2" VerticalAlignment="Top" HorizontalAlignment="Center" Stroke="{StaticResource StrongBrush}" Data="M 0,0 L 3.5,3.5 L 7,0" />
						</Grid>
					</Grid>
                    
                    <ControlTemplate.Triggers>
                        <Trigger Property="Variant" Value="Collapsed">
                            <Setter Property="Visibility" TargetName="CollapsedDisplay" Value="Visible" />
                            <Setter Property="Visibility" TargetName="CollapsedButton" Value="Visible" />
                            <Setter Property="Visibility" TargetName="ExpandedChrome" Value="Collapsed" />
                        </Trigger>
                        <Trigger Property="IsPushed" Value="True">
                            
                        </Trigger>
                        <Trigger Property="IsPushed" Value="False">
                            
                        </Trigger>
                    </ControlTemplate.Triggers>
                    
                </ControlTemplate>
			</Setter.Value>
		</Setter>
	</Style>

	
    

    <Style TargetType="telerikRibbonView:RadRibbonRadioButton">
        <Setter Property="Padding" Value="3" />
        <Setter Property="BorderThickness" Value="1" />
        <Setter Property="HorizontalAlignment" Value="Left" />
        <Setter Property="HorizontalContentAlignment" Value="Left" />
        <Setter Property="VerticalContentAlignment" Value="Center" />
